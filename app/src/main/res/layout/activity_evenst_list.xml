<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Events.EvenstList"
    android:orientation="vertical"
   >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <TextView
        android:id="@+id/tv_myevents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/green"
        android:gravity="center_horizontal"
        android:textColor="@color/whiteBackGround"
        android:text="My Events"
        android:textSize="24sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_Myeven"
        android:layout_width="match_parent"
        android:layout_height="350dp"

        android:scrollbars="vertical"

       />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        >
    <TextView
        android:id="@+id/tv_invited_events"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="My Invited Events"
        android:textColor="@color/whiteBackGround"
        android:layout_gravity="bottom"
        android:textSize="24sp"

        android:background="@color/blueblack"
        />


    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="350dp"

        android:scrollbars="vertical"
        android:id="@+id/rv_invevents"



        />


</LinearLayout>
</LinearLayout>

