<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Events.MyCardInvitation"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/event_img"
            android:layout_width="match_parent"
            android:layout_height="198dp"
            android:layout_marginTop="25dp"
            android:contentDescription="@string/Upload_Image2"
            android:src="@drawable/linkedin_banner_image_1" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            >

            <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/accept_n_invitation"
            android:id="@+id/btn_acceptInvite"
            android:textColor="@color/gray"
            android:background="@drawable/roundedbutton"
            android:padding="5dp"
            />
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/gray"
                android:text="@string/maybe_n"
                android:id="@+id/btn_notsure"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/roundedbutton"
                android:padding="5dp"

                />
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/gray"
                android:id="@+id/btn_reject"
                android:text="@string/reject_n_invitaion"
                android:background="@drawable/roundedbutton"
                android:padding="5dp"
                />



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:background="@drawable/roundedlayout"
            android:padding="25dp"
            >
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_video"
                android:text="@string/invitation_video"
                android:textColor="@color/gray"
                android:background="@drawable/roundedbutton"
                android:layout_marginBottom="5dp"
                android:visibility="gone"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_weight="1"
                    tools:ignore="Suspicious0dp"
                    android:gravity="center"
                    android:background="@drawable/textviewshape"
                    android:id="@+id/tv_finviter"
                    android:textSize="18sp"
                    />


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/textviewshape"
                    tools:ignore="Suspicious0dp"
                    android:id="@+id/tv_sinviter"
                    android:textSize="18sp"
                    android:layout_marginStart="20dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="5dp"
                    android:background="@drawable/hinttextview"
                    android:layout_height="match_parent"
                    android:hint="@string/event_date"
                    android:textSize="18sp"


                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:layout_height="match_parent"
                    android:hint="@string/dd_mm_yyyy"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:background="@drawable/textviewshape"
                    android:id="@+id/tv_eventdate"
                    android:layout_marginStart="15dp"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:background="@drawable/hinttextview"
                    android:hint="@string/start_time"
                    android:padding="5dp"
                    android:textSize="18sp"
                    tools:ignore="Suspicious0dp" />


                <TextView
                    android:id="@+id/tv_starttime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:hint="@string/hh_mm"
                    android:padding="5dp"
                    android:background="@drawable/textviewshape"
                    android:textSize="18sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"

                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/hinttextview"
                    android:hint="@string/end_time"
                    android:padding="5dp"
                    android:gravity="center"
                    android:textSize="18sp"
                    tools:ignore="Suspicious0dp" />

                <TextView
                    android:id="@+id/tv_endtime"

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/textviewshape"
                    android:gravity="center"
                    android:hint="@string/hh_mm"
                    android:padding="5dp"
                    android:textSize="18sp"

                    />


            </LinearLayout>

            <TextView
                android:id="@+id/tv_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:hint="@string/description"
                android:background="@drawable/hinttextview"
                android:lines="7"
                android:nestedScrollingEnabled="true"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <Button
                    android:id="@+id/btn_location"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/roundedbutton"
                    android:padding="5dp"
                    android:text="@string/location"
                    android:textColor="@color/gray" />

                <Button
                    android:id="@+id/btn_groupchat"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"

                    android:layout_weight="1"
                    android:background="@drawable/roundedbutton"
                    android:padding="5dp"
                    android:text="@string/chat"
                    android:textColor="@color/gray" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                >

<!--                <Button-->
<!--                    android:layout_width="0dp"-->
<!--                    android:layout_weight="1"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:id="@+id/btn_invite"-->
<!--                    android:text="Invite\n Friends"-->
<!--                    android:textColor="@color/gray"-->
<!--                    android:background="@drawable/roundedbutton"-->
<!--                    />-->
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_attendanceQR"
                    android:text="generate_attendance_qr_code"
                    android:textColor="@color/gray"
                    android:background="@drawable/roundedbutton"

                    android:layout_marginBottom="5dp"
                    />




            </LinearLayout>

        </LinearLayout>





    </LinearLayout>
</ScrollView>