<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="50dp"
    app:cardPreventCornerOverlap="true"
    app:cardElevation="150dp"
    app:cardBackgroundColor="@color/homeitem"

    >

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_home"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/whiteBackGround"
            android:contentDescription="@string/home_icons"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/home_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_home"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="@string/home"
            android:textColor="@color/whiteBackGround"
            android:textStyle="bold"
            android:autoSizeMaxTextSize="@dimen/activity_horizontal_margin"/>


    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.cardview.widget.CardView>